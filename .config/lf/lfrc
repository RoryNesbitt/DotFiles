#Basic settings
set ignorecase true
set icons true

# uberzug integration
set previewer ~/.config/lf/previewer.sh
set cleaner ~/.config/lf/cleaner.sh

#Custom commands
cmd mkdir %{{
  if [ $# = 0 ]; then
    printf "Directory Name: "
    read ans
    mkdir $ans
  else
    mkdir $@
  fi
}}

cmd touch %{{
  if [ $# = 0 ]; then
    printf "File Name: "
    read ans
    touch $ans
  else
    touch $@
  fi
}}

cmd open &{{
  case $(file --mime-type -Lb $f) in
    text/*) lf -remote "send $id \$$EDITOR \$fx";;
    # *) for f in $fx; do
    #   echo $f
    #   xdg-open "$f" & #>/dev/null &
    #   done
    #   ;;
    *) xdg-open "$f" ;;
  esac
}}

cmd mt %{{
  echo $(file --mime-type -Lb $f)
}}

cmd cdTrigger %{{
  echo "1" > "$LF_TEMPDIR/changecwd"
}}

cmd cdq &{{
  lf -remote "send $id cdTrigger"
  lf -remote "send $id cleanQuit"
}}

cmd cleanQuit %{{
  ~/.config/lf/cleaner.sh
  lf -remote "send $id quit"
}}

cmd drag &{{
  ripdrag -d $f
}}

#keymaps
map n
map nf touch
map nd mkdir
map D delete
map ZZ cleanQuit
map ZQ cleanQuit
map q cleanQuit
map w cdq
map <enter> open
map r drag
