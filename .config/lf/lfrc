#Basic settings
set ignorecase true
set icons true

# uberzug integration
# set previewer ~/.config/lf/previewer.sh
# set cleaner ~/.config/lf/clear_img.sh

#Custom commands
cmd mkdir %{{
  if [ $# = 0 ]; then
    printf "Directory Name: "
    read ans
    mkdir $ans
  else
    mkdir $@
  fi
}}

cmd touch %{{
  if [ $# = 0 ]; then
    printf "File Name: "
    read ans
    touch $ans
  else
    touch $@
  fi
}}

cmd open &{{
  case $(file --mime-type -Lb $f) in
    text/*) lf -remote "send $id \$$EDITOR \$fx";;
    # *) for f in $fx; do
    #   echo $f
    #   xdg-open "$f" & #>/dev/null &
    #   done
    #   ;;
    *) xdg-open "$f" ;;
  esac
}}

cmd mt %{{
  echo $(file --mime-type -Lb $f)
}}

#keymaps
map n
map nf touch
map nd mkdir
map D delete
map ZZ quit
map ZQ quit
map <enter> open
