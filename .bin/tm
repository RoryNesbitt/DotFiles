#!/bin/sh

if [ $# != 0 ]; then
    if [ $1 = 'w' ]; then
        session='work'
    elif [ $1 = 'ww' ]; then
        session='work2'
	else
	session=$1
    fi

    if ! tmux has-session -t $session 2> /dev/null; then
	if [ $session = 'work' ]; then
		tmux new -s $session -d -c ~/Documents/work
		tmux send-keys -t $session '$EDITOR .' Enter
		#tmux send-keys -t work:2.1 ./start
	elif [ $session = 'work2' ]; then
		tmux new -s $session -d -c ~/Documents/work-website
		#tmux send-keys -t $session:1 './home.sh' Enter
	elif [ $session = 'scripts' ]; then
		tmux new -s $session -d -c ~/.bin $EDITOR .
	else
		tmux new -s $session -d
	fi  # if $session is 'x'
    fi  # has-session work

    if [ "$TMUX" = "" ]; then
        tmux attach-session -t $session
    else
        tmux switch-client -t $session
    fi
fi


